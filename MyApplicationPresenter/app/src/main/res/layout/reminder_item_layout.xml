<?xml version="1.0" encoding="utf-8"?>
<com.widget.looprecycleview.myapplicationpresenter.FocusShadowLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reminder_item"
    android:background="@color/lb_playback_controls_background_dark"
    android:layout_width="181dp"
    android:layout_height="160dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:focusable="true">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="181dp"
        android:layout_height="160dp"
        android:clipToPadding="false"
        android:clipChildren="false">
    <ImageView
        android:id="@+id/iamge_view"
        android:layout_height="18dp"
        android:layout_width="18dp"
        android:src="@drawable/image"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/text_lable"
        android:gravity="left"
        android:maxLines="3"
        android:ellipsize="end"
        android:background="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>

</com.widget.looprecycleview.myapplicationpresenter.FocusShadowLinearLayout>